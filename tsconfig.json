{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./out",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "strict": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": [
      "es6"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "typeRoots": [
    "typings",
    "node_modules/@types"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/__tests__/**/*"
  ]
}

